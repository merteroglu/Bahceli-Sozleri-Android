<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.humegames.devletbahcelisozler.MainActivity">


        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:background="@color/colorPrimary"
            android:text="Ses öner"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="Hoşgeldin"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/btn1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:text="Butonlara basılı tutarak sesleri paylaşabilir,zil sesi ve bildirim sesi yapabilirsin."
            android:textSize="20dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Ses Öner butonu ile eklenmesini istediğiniz sesleri bize bildirebilirsin"
            android:textSize="15dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:background="@color/colorPrimary"
            android:text="Paylaş"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:text="Uygulamamızı Arkadaşlarınla Paylaşabilirsin"
            android:textAlignment="center" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/admob_adview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_footer"
            android:layout_below="@+id/btn2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp" />

    </RelativeLayout>

</ScrollView>